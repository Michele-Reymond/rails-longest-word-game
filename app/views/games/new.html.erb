<div class="container">
  <h1>New game</h1>
  <div id="letters-container">
    <% @letters.each do |letter| %>
      <div id="letters"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="post" class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="your word" class="form-control">
    <input id="grid" name="grid" type="hidden" value=<%= @letters.join %> >
    <input type="submit" class="btn btn-primary">
  </form>
</div>

