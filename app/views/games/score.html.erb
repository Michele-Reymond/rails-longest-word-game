<div class="container">
  <h1>Result</h1>
  <% if @include && @english %>
  <%= "Congratulation! #{params[:word]} is a valid English word!" %>
  <% elsif !@english %>
  <%= "Sorry but #{params[:word]} does not seem to be a valid English word..." %>
  <% else %>
  <%= "Sorry but #{params[:word]} can't be built out of #{params[:grid].split("").join(", ")} " %>
  <% end %>

  <%= link_to "play again", new_path %>
</div>
